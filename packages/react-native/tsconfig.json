{
  "compilerOptions": {
    "allowJs": true /* Allow javascript files to be compiled. */,
    "outDir": "./dist", // Diretório para os arquivos JavaScript transpilados
    "declaration": true, // Gera arquivos .d.ts para declaração de tipos
    "declarationDir": "./dist/types", // Diretório para os arquivos de declaração de tipos
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es6",
    "jsx": "react-native", // Configuração específica para React Native
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "index.js"]
}
